<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Profile</h3>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-md-6">
					<div class="row">
						<div class="col-md-6">
							<% if @user.avatars[0] %>
							<div class="profile-image">
								<%= image_tag @user.avatars[0].square.url, :class => "profile-pic" %>
							</div>
							<div class="profile-image-delete">
								<button>
								<span class="glyphicon glyphicon-trash"><%= link_to "", remove_image_path(@user), method: :delete %></span>
								</button>
								</div>
							<% end %>
						</div>
						<div class="col-md-6">
							<%= form_for @user do |f| %>
								<%= f.file_field :avatars, multiple: true %>
								<%= f.submit "Add image", :class => "btn btn-default" %>
							<% end %> 
						</div>	
					</div>
				</div>
				<div class="col-md-6">
					<div class="row">
						<div class="col-md-3">
							<p class="text-right">Email</p>
						</div>
						<div class="col-md-9">
							<p><%= @user.email %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>