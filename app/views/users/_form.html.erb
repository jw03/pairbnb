<%= form_for User.new do |form| %>
  <%= link_to "Sign up With Facebook", "/auth/facebook", :class => "like-btn like-btn-fb" %>

  <div class="signin-separator">
    <span class="signin-separator--text">or</span>
    <hr>
  </div>

	<div class="text-field">
		<%= form.text_field :first_name, placeholder: "First name", :class => "modal-input"%>
	</div>    
	<div class="text-field">
		<%= form.text_field :last_name, placeholder: "Last name", :class => "modal-input" %>
	</div>

	<div class="text-field">
		<%= form.text_field :email, type: 'email', placeholder: "Email", :class => "modal-input" %>
	</div>

	<div class="password-field">
		<%= form.password_field :password, placeholder: "Password", :class => "modal-input" %>
	</div>

	<div class="submit-field">
		<%= form.submit :class => "modal-input modal-input-primary"%>
	</div>


<% end %>